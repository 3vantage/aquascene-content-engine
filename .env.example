# AquaScene Content Engine - Environment Variables Template
# Copy this file to .env and fill in your values

# ===================
# ENVIRONMENT CONFIG
# ===================
ENVIRONMENT=development
NODE_ENV=development
DEBUG=true

# ===================
# DATABASE CONFIG
# ===================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=content_engine
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password_here

# Test database (for development)
TEST_DB_NAME=content_engine_test

# ===================
# REDIS CONFIG
# ===================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ===================
# MINIO/S3 CONFIG
# ===================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=content-engine-assets
MINIO_SECURE=false

# Production S3 settings
S3_ENDPOINT=s3.amazonaws.com
S3_ACCESS_KEY=your_aws_access_key
S3_SECRET_KEY=your_aws_secret_key
S3_BUCKET=aquascene-content-assets
S3_REGION=us-east-1

# ===================
# AI SERVICE KEYS
# ===================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OLLAMA_BASE_URL=http://ollama:11434

# ===================
# EXTERNAL SERVICES
# ===================
# SendGrid for email
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@aquascene.com
SENDGRID_FROM_NAME=AquaScene Content Engine

# Instagram Business API
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Twitter API (optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# ===================
# SECURITY KEYS
# ===================
JWT_SECRET=your_jwt_secret_key_minimum_32_chars
ENCRYPTION_KEY=your_encryption_key_32_bytes_base64
SECRET_KEY=your_secret_key_for_sessions_and_csrf

# ===================
# SERVICE PORTS
# ===================
API_PORT=8000
AI_PORT=8001
SCRAPER_PORT=8002
DISTRIBUTOR_PORT=8003
SUBSCRIBER_PORT=8004
ADMIN_PORT=3001

# ===================
# MONITORING CONFIG
# ===================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password
GRAFANA_SECRET_KEY=your_grafana_secret_key_32_chars

PROMETHEUS_RETENTION=30d
PROMETHEUS_STORAGE_SIZE=10GB

# ===================
# BACKUP CONFIG
# ===================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_PASSWORD=your_backup_encryption_password

# Backup storage (S3 or compatible)
S3_BACKUP_BUCKET=aquascene-backups
BACKUP_SLACK_WEBHOOK=https://hooks.slack.com/your/webhook/url

# ===================
# WEB SCRAPER CONFIG
# ===================
SCRAPER_USER_AGENT=AquaSceneBot/1.0 (+https://aquascene.com/bot)
SCRAPER_DELAY=2
SCRAPER_MAX_CONCURRENT=5
SCRAPER_TIMEOUT=30

# Target sites configuration
SCRAPER_TARGETS_CONFIG_FILE=./config/scraper_targets.yml

# ===================
# CONTENT CONFIG
# ===================
CONTENT_MAX_LENGTH_NEWSLETTER=5000
CONTENT_MAX_LENGTH_INSTAGRAM=2200
CONTENT_GENERATION_BATCH_SIZE=10

# Content quality thresholds
CONTENT_MIN_QUALITY_SCORE=0.7
CONTENT_MIN_READABILITY_SCORE=60

# ===================
# EMAIL CONFIG
# ===================
# Newsletter sending limits
NEWSLETTER_MAX_RECIPIENTS_PER_BATCH=100
NEWSLETTER_SEND_DELAY_SECONDS=1

# Email templates
EMAIL_TEMPLATE_PATH=./templates/emails
EMAIL_ASSETS_URL=https://assets.aquascene.com

# ===================
# SSL/TLS CONFIG
# ===================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/aquascene.com.pem
SSL_KEY_PATH=/etc/ssl/private/aquascene.com.key

# Let's Encrypt
LETSENCRYPT_EMAIL=admin@aquascene.com
LETSENCRYPT_DOMAINS=aquascene.com,api.aquascene.com,admin.aquascene.com

# ===================
# DOMAIN CONFIG
# ===================
DOMAIN=localhost
API_DOMAIN=localhost:8000
ADMIN_DOMAIN=localhost:3001
CDN_DOMAIN=localhost:9000

# Production domains
PROD_DOMAIN=aquascene.com
PROD_API_DOMAIN=api.aquascene.com
PROD_ADMIN_DOMAIN=admin.aquascene.com
PROD_CDN_DOMAIN=cdn.aquascene.com

# ===================
# LOGGING CONFIG
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Centralized logging
LOKI_URL=http://loki:3100
ENABLE_STRUCTURED_LOGGING=true

# ===================
# ERROR TRACKING
# ===================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# New Relic (optional)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=AquaScene Content Engine

# ===================
# RATE LIMITING
# ===================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# API specific limits
API_RATE_LIMIT_PER_MINUTE=100
AI_RATE_LIMIT_PER_MINUTE=20

# ===================
# FEATURE FLAGS
# ===================
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_INSTAGRAM_POSTING=true
ENABLE_EMAIL_SENDING=true
ENABLE_WEB_SCRAPING=true
ENABLE_ANALYTICS_TRACKING=true

# Development features
ENABLE_DEBUG_TOOLBAR=true
ENABLE_API_DOCS=true
ENABLE_METRICS_ENDPOINT=true

# ===================
# PERFORMANCE CONFIG
# ===================
# Database connection pooling
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis connection pooling
REDIS_POOL_SIZE=20
REDIS_POOL_TIMEOUT=5

# Worker configuration
CELERY_WORKERS=4
CELERY_MAX_TASKS_PER_CHILD=100
CELERY_TASK_TIMEOUT=300

# ===================
# ANALYTICS CONFIG
# ===================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_api_key

# ===================
# WEBHOOK CONFIG
# ===================
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_TIMEOUT=10

# External webhook URLs
CONTENT_PUBLISHED_WEBHOOK=https://your-site.com/webhooks/content-published
SUBSCRIBER_ADDED_WEBHOOK=https://your-site.com/webhooks/subscriber-added

# ===================
# DEVELOPMENT HELPERS
# ===================
# Hot reload for development
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true

# Mock external services for testing
MOCK_SENDGRID=false
MOCK_INSTAGRAM_API=false
MOCK_AI_SERVICES=false

# ===================
# STAGING ENVIRONMENT
# ===================
STAGING_DB_NAME=content_engine_staging
STAGING_DB_USER=postgres_staging
STAGING_DB_PASSWORD=staging_db_password
STAGING_REDIS_PASSWORD=staging_redis_password
STAGING_MINIO_ROOT_USER=staging_admin
STAGING_MINIO_ROOT_PASSWORD=staging_minio_password

# Staging service ports
STAGING_DB_PORT=5433
STAGING_REDIS_PORT=6380
STAGING_API_PORT=8010
STAGING_AI_PORT=8011
STAGING_SCRAPER_PORT=8012
STAGING_DISTRIBUTOR_PORT=8013
STAGING_SUBSCRIBER_PORT=8014
STAGING_ADMIN_PORT=3011

# Staging monitoring
STAGING_GRAFANA_USER=staging_admin
STAGING_GRAFANA_PASSWORD=staging_grafana_password

# ===================
# PRODUCTION ENVIRONMENT
# ===================
PROD_DB_NAME=content_engine_production
PROD_DB_USER=content_engine_prod
PROD_DB_PASSWORD=production_db_password_very_secure
PROD_DB_REPLICA_USER=replica_user
PROD_DB_REPLICA_PASSWORD=replica_password_secure

PROD_REDIS_PASSWORD=production_redis_password_very_secure
PROD_MINIO_ROOT_USER=production_admin
PROD_MINIO_ROOT_PASSWORD=production_minio_password_very_secure

# Production API keys (use different keys for production)
PROD_OPENAI_API_KEY=prod_openai_key
PROD_ANTHROPIC_API_KEY=prod_anthropic_key
PROD_SENDGRID_API_KEY=prod_sendgrid_key
PROD_INSTAGRAM_ACCESS_TOKEN=prod_instagram_token
PROD_INSTAGRAM_BUSINESS_ACCOUNT_ID=prod_instagram_business_id

# Production monitoring
PROD_GRAFANA_USER=production_admin
PROD_GRAFANA_PASSWORD=production_grafana_password_very_secure
GRAFANA_DB_USER=grafana_prod
GRAFANA_DB_PASSWORD=grafana_db_password_secure

# Production security
PROD_ENCRYPTION_KEY=production_encryption_key_base64_32_bytes
PROD_JWT_SECRET=production_jwt_secret_minimum_64_characters_very_secure

# Production error tracking
PROD_SENTRY_DSN=https://prod-sentry-dsn@sentry.io/project-id
PROD_FRONTEND_SENTRY_DSN=https://frontend-sentry-dsn@sentry.io/project-id

# Production backup
PROD_S3_ENDPOINT=s3.amazonaws.com
PROD_S3_ACCESS_KEY=prod_aws_access_key
PROD_S3_SECRET_KEY=prod_aws_secret_key
PROD_S3_BACKUP_BUCKET=aquascene-production-backups
PROD_BACKUP_SCHEDULE=0 1 * * *
PROD_BACKUP_RETENTION_DAYS=90

# Production scraper settings
PROD_SCRAPER_USER_AGENT=AquaSceneBot/1.0 (+https://aquascene.com/bot)
PROD_SCRAPER_DELAY=5

# Production database settings
PROD_DB_PORT=5432
PROD_DB_REPLICA_PORT=5433
PROD_REDIS_PORT=6379